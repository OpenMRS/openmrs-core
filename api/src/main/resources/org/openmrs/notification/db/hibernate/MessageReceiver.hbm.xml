<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.notification">

	<class name="org.openmrs.notification.MessageReceiver" table="message_receiver">
		<id name="id" type="int" column="id" unsaved-value="0">
			<generator class="native">
				<param name="sequence">message_receivers_id_seq</param>
			</generator>
		</id>
		<discriminator column="id" insert="false" />
		<many-to-one name="sentMessage" column="message_id" class="org.openmrs.notification.SentMessage" not-null="true" />
		<many-to-one name="receiver" column="receiver_id" class="org.openmrs.User" not-null="true" />
		<property name="uuid" column="uuid" type="java.lang.String" unique="true"  length="38" not-null="true" />
		<property name="sentDate" column="sent_date" type="java.util.Date" />
	</class>

</hibernate-mapping>
