<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.notification">

	<class name="org.openmrs.notification.SentMessage" table="sent_message">
		
		<id name="sentMessageId" type="int" column="message_id" unsaved-value="0">
			<generator class="native">
				<param name="sequence">sent_message_message_id_seq</param>
			</generator>
		</id>
		
		<property name="senderId" column="sender_id" type="java.lang.Integer" not-null="true"	/>
		
		<property name="receiverId" column="receiver_id" type="java.lang.Integer"/>
		
		<property name="message" type="java.lang.String" not-null="true" />
		
		<property name="dateSent" column="date_sent" type="java.util.Date" not-null="true"/>
		
		<property name="messageType" column="message_type" type="java.lang.String"/>
	</class>

</hibernate-mapping>
