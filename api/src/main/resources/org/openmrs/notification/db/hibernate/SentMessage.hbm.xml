<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.notification">

	<class name="org.openmrs.notification.SentMessage" table="sent_messages">
		<id name="messageId" type="int" column="message_id">
			<generator class="native">
				<param name="sequence">sent_message_message_id_seq</param>
			</generator>
		</id>
		<many-to-one name="sender" class="org.openmrs.User" column="sender_id"  not-null="true"/>
		<property name="subject" type="java.lang.String" />
		<property name="content" type="java.lang.String"/>
		<property name="contentType" type="java.lang.String" column="content_type"/>
		<property name="sentDate" type="java.util.Date" column="sent_date"/>
	</class>

</hibernate-mapping>
